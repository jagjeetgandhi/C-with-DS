int partition(int a[],int l, int h) {
	printf("starting111");
	int i = l;
	int j = h;
	int pivot = a[l];
	do {
		
		do {
			i++; }while(a[i]<=pivot);
		do {
			j--;} while(a[j]>pivot);
			if(i < j) {
				swap(&a[i],&a[j]);
			}
			
			}while(i<j);
			swap(&a[l],&a[j]);
			return j;
}

void quicksort(int a[],int l,int h) {
	printf("starting222");
	int j = 0;
     j = partition(a,l,h);
     quicksort(a,l,j);
     quicksort(a,j+1,h);
}

void swap (int *x,int *y) {
	int temp = *x;
	   *x = *y;
	   *y = temp;
}
 
 
	
	
